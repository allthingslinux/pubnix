server {
    listen 80 default_server;
    # IPv6 disabled in some dev environments; use IPv4 only
    # listen [::]:80 default_server;

    server_name localhost atl-pubnix-dev;
    root /var/www/html;
    index index.html index.htm;

    # API proxy to backend (preserve /api prefix)
    location /api/ {
        proxy_pass http://localhost:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Proxy backend-rendered HTML pages
    location = /apply {
        proxy_pass http://localhost:8000/apply;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location = /admin/review {
        proxy_pass http://localhost:8000/admin/review;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Ensure /~user (no trailing slash) internally maps to /~user/
    rewrite ^/~([^/]+)$ /~$1/ last;

    # User web directories
    location ~ ^/~(.+?)(/.*)?$ {
        alias /home/$1/public_html$2;
        index index.html index.htm;
        autoindex on;
        
        # Basic security headers
        add_header X-Frame-Options "SAMEORIGIN" always;
        add_header X-Content-Type-Options "nosniff" always;
        
        # CGI support for development
        location ~ \.cgi$ {
            include fastcgi_params;
            fastcgi_param SCRIPT_FILENAME $request_filename;
            fastcgi_pass unix:/var/run/fcgiwrap.socket;
        }
    }

    # Static assets
    location /static/ {
        alias /opt/pubnix/web/dist/;
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # Landing page
    location = /landing {
        alias /opt/pubnix/web/landing/index.html;
        default_type text/html;
    }

    # Root: serve landing page via try_files to avoid alias pitfalls
    location = / {
        root /opt/pubnix/web;
        try_files /landing/index.html =404;
        default_type text/html;
    }

    # Optionally proxy the app under /app/ to the Vite dev server
    location /app/ {
        proxy_pass http://web-dev:3000/;
        proxy_set_header Host localhost:3000;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
}